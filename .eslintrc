{
  "parser" : "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel"
  ],
  "env": {
    "browser" : true
  },
  "globals" : {
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "__COVERAGE__": false,
    "__BASENAME__": false,
    "google": false
  },
  "rules": {
    "semi" : ["error", "always"],
    "max-len": [2, 100, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "space-before-function-paren": "off",
    "keyword-spacing": "off",
    "camelcase": 0,
    "jsx-quotes": ["error", "prefer-double"]
  }
}
